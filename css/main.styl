@import 'assets/imports.styl'
@import 'css-assets/normalize.styl'

@import 'css-assets/general'
@import 'css-assets/elements'
@import 'css-assets/blocks'
@import 'css-assets/layouts'
@import 'css-assets/effects'
@import 'css-assets/icons'

c-green = #00FFC6
c-grey  = #777


.arrow
	width 2px
	height 200px
	transform-origin center bottom
	background c-green
	top -50%
	left 100%
	margin-top -175px

	&--center
		margin-left -20px

.car
	height 10px
	width 40%
	opacity 0
	// border-radius 50%
	&--1
		right 100%
		top 40%
		border-top-left-radius 50%
		border-bottom-left-radius 50%
	&--2
		left 100%
		top: 60%
		border-top-right-radius 50%
		border-bottom-right-radius 50%

.text
	font-family 'Open Sans'
	font-size 60px
	text-transform uppercase
	font-weight 100
	text-align center
	&--fast
		rect 100%
		hl green
		nw 0
		// transform translateX(-50%) translateY(-100%)
		step = 45px
		&__1
			margin-left -(step*2)
			nw 50%
		&__2
			margin-left -(step)
			nw 50%
		&__3
			margin-left 0
			nw 50%
		&__4
			margin-left step
			nw 50%
		span, div
			letter-spacing 5px
			display inline-block
			transform-origin center bottom
			margin-top -30px

.c-green-g
	background c-green

.c-green-c-g
	color c-green

.c-grey-g
	background c-grey

.c-red-g
	background deeppink

.circle
	border-radius 50%

.center
	nw 50%

.a-g
	position absolute

div
	position absolute
	z-index 10

.text-wrapper
	width 300px
	left 50%
	height 60px
	overflow hidden
	top 50%
	margin-left -300px
	margin-top -130px
	z-index 8
	&--robust
		width 0
		background  #777777
		.text-wrapper__shade
			display: none
		.text-wrapper__text
			width 300px
	&--easy
		z-index 7
		opacity 0
	&__text
		color c-green
		font-family 'Open Sans'
		font-size 60px
		text-transform uppercase
		font-weight 100
		text-align center
		position absolute
		rect 100%
		nw 0
	&__shade
		rect 100%
		background #777777
		position absolute
		nw 0

.screen, .slice, .slice1
	position absolute
	nw 0
	rect 100%

.slice, .slice1
	transform-origin right bottom
	&--grey
		background #777
		z-index 5
	&--green
		z-index 4
	&--white
		background white
		z-index 3
	&--orange
		background orange
		z-index 2
	&--purple
		background deeppink
		z-index 1

.slice1
	z-index 0

.inherit-bg
	background inherit

.velocity
	position absolute
	nw 50%
	color c-green
	font-size 70px
	font-family 'Open sans'
	text-transform uppercase
	font-weight 100
	margin-left (2400)px
	min-width 400px
	margin-top  -40px
	transform translateX(-160px)
	span
		display inline-block



