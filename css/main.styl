@import 'assets/imports.styl'
@import 'css-assets/normalize.styl'

@import 'css-assets/general'
@import 'css-assets/elements'
@import 'css-assets/blocks'
@import 'css-assets/layouts'
@import 'css-assets/effects'
@import 'css-assets/icons'

c-green = #00FFC6

.c-green-g
	background c-green

.a-g
	position absolute

div
	position absolute

.text-wrapper
	width 300px
	left 50%
	height 60px
	overflow hidden
	top 50%
	margin-left -300px
	margin-top -130px
	&__text
		color c-green
		font-family 'Open Sans'
		font-size 60px
		text-transform uppercase
		font-weight 100
		text-align center
		position absolute
		rect 100%
		nw 0
	&__shade
		rect 100%
		background #777777
		position absolute
		nw 0
